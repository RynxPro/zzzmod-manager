{
  "name": "zzzmod-manager",
  "version": "0.1.0",
  "description": "ZZZ Mod Manager - Electron + React + Tailwind",
  "main": "src/main/main.js",
  "type": "module",
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
