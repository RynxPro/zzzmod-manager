    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.2",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.0",
    "@types/react-dropzone": "^4.2.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.45",
